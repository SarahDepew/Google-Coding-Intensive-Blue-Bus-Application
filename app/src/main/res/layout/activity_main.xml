<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demouser.bluebus.MainActivity">

    <TextView
        android:id="@+id/dayoftheWeekText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dayoftheWeek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/dayoftheWeekText"
        app:layout_constraintTop_toTopOf="@id/dayoftheWeekText"/>

</android.support.constraint.ConstraintLayout>
